@model Cafe.Models.Admin

@{
    ViewBag.Title = "Login";
}

<div >

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2>Login</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group row">
            <div class="col-12">
                <div class="form-group">

                    <div class="col-md-12">
                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control inputemail", placeholder = "name" } })
                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12">
                <div class="form-group">

                    <div class="col-md-12">
                        @Html.PasswordFor(model => model.password, new { @class = "form-control inputpassword", placeholder = "Password" })
                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-7">
                <input type="submit" value="Login" class="btn btn-primary btin" /><br>
                @*<a>@Html.ActionLink("Sign Up", "Signup", "Users", new { @class = "btn btn-primary btnActivate" })</a>*@
            </div>
        </div>
        <br><span class="text-danger">@ViewBag.errm</span>
        <div>
            @Html.ActionLink("Back to List", "Home","Drinks")
        </div>

    </div>
    }

</div>

